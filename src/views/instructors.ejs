<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/instructors.css" />
  </head>
  <body>
    <%- include('partials/header') %>
    <section class="hero">
      <h1>Instructors</h1>
      <p><%= description %></p>
    </section>
    <main>
      <ul class="instructor-list">
        <% instructors.forEach(function(instructor) { %>
        <li class="instructor-card">
          <div class="instructor-card-header">
            <img
              src="<%= instructor.profile_img %>"
              alt="<%= instructor.name %>"
              width="100"
              height="100"
            />
            <div class="instructor-card-header-text">
              <span class="instructor-card-header-name"
                ><%= instructor.name %></span
              >
              <span class="instructor-card-header-title"
                ><%= instructor.title %></span
              >
              <div class="instructor-card-header-specializations">
                <% instructor.specialization.split(",").map(elem =>
                elem.trim()).forEach(function(specialization) { %>
                <span class="instructor-card-header-specialization badge"
                  ><%= specialization %></span
                >
                <% }); %>
              </div>
            </div>
          </div>
          <div class="instructor-card-content">
            <p class="instructor-card-content-bio"><%= instructor.bio %></p>
          </div>
        </li>
        <% }); %>
      </ul>
    </main>
    <%- include("partials/footer") %>
  </body>
</html>
