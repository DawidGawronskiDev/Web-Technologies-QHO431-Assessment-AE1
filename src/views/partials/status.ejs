<div>
  <style>
    .status {
      width: 1.25rem;
      aspect-ratio: 1 / 1;

      border-radius: 100%;

      position: relative;
    }
    .status.upcoming {
      color: var(--color-success);
      background-color: var(--color-success);
    }
    .status.past {
      color: var(--color-error);
      background-color: var(--color-error);
    }
    .status::before {
      content: "";
      width: 100%;
      height: 100%;

      border-radius: 100%;

      position: absolute;

      background-color: currentColor;

      animation: pulse 1.5s infinite;
    }
  </style>
  <% const now = new Date(); const eventDate = new Date(date); const isUpcoming
  = eventDate > now ? "upcoming" : "past"; %>
  <div class="status <%= isUpcoming %>"></div>
</div>
