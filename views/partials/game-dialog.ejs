<dialog id="game-dialog" class="dialog">
  <style>
    #game-dialog {
      position: absolute;

      width: 100%;

      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);

      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;

      padding: 2rem 0;
    }
  </style>
  <h2>Game Over</h2>
  <p id="game-message"></p>
  <button id="restart-button">Restart Game</button>
</dialog>
